<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="10pt"
        android:layout_marginRight="4pt"
        android:layout_marginBottom="10pt"
        android:fontFamily="@font/damion"
        android:text="Habit Tracker"
        android:textColor="@color/add_button"
        android:textSize="34sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/username_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginRight="10pt"
        android:fontFamily="@font/raleway"
        android:text="Username"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:fontFamily="@font/raleway_italic"
        android:hint="Please enter your username here."
        android:minHeight="48dp"
        android:textColor="@color/add_button"
        android:textColorHint="@color/add_button"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginRight="10pt"
        android:fontFamily="@font/raleway"
        android:text="Password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:fontFamily="@font/raleway_italic"
        android:hint="Please enter your password here."
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/add_button"
        android:textColorHint="@color/add_button"
        android:textSize="16sp" />

    <Button
        android:id="@+id/Nav_to_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginRight="10pt"
        android:backgroundTint="@color/friends"
        android:fontFamily="@font/raleway_italic"
        android:minHeight="0dp"
        android:text="Log in"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/Nav_to_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginRight="10pt"
        android:clickable="true"
        android:fontFamily="@font/raleway"
        android:minHeight="48dp"
        android:text="Sign Up"
        android:textColor="@color/friends" />

</LinearLayout>
