<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.habit_tracker.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainPageFragment"
            app:destination="@id/mainPageFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.habit_tracker.MainPageFragment"
        android:label="fragment_main_page"
        tools:layout="@layout/fragment_main_page" >
        <action
            android:id="@+id/action_mainPageFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.example.habit_tracker.HabitListFragment"
        android:label="fragment_habit_list"
        tools:layout="@layout/fragment_habit_list" >
        <action
            android:id="@+id/action_habitListFragment_to_habitDetailFragment"
            app:destination="@id/habitDetailFragment" />
        <action
            android:id="@+id/action_habitListFragment_to_habitAddFragment"
            app:destination="@id/habitAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitDetailFragment"
        android:name="com.example.habit_tracker.HabitDetailFragment"
        android:label="fragment_habit_detail"
        tools:layout="@layout/fragment_habit_detail" >
        <action
            android:id="@+id/action_habitDetailFragment_to_habitEditFragment"
            app:destination="@id/habitEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitEditFragment"
        android:name="com.example.habit_tracker.HabitEditFragment"
        android:label="fragment_habit_edit"
        tools:layout="@layout/fragment_habit_edit" >
        <action
            android:id="@+id/action_habitEditFragment_to_habitDetailFragment"
            app:destination="@id/habitDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitAddFragment"
        android:name="com.example.habit_tracker.HabitAddFragment"
        android:label="fragment_habit_add"
        tools:layout="@layout/fragment_habit_add" >
        <action
            android:id="@+id/action_habitAddFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.habit_tracker.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewHabitEventFragment"
        android:name="com.example.habit_tracker.ViewHabitEventFragment"
        android:label="fragment_view_habit_event"
        tools:layout="@layout/fragment_view_habit_event" >
        <action
            android:id="@+id/action_viewHabitEventFragment_to_editHabitEventFragment"
            app:destination="@id/editHabitEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/editHabitEventFragment"
        android:name="com.example.habit_tracker.EditHabitEventFragment"
        android:label="fragment_edit_habit_event"
        tools:layout="@layout/fragment_edit_habit_event" />

</navigation>